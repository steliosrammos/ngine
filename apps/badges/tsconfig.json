{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "incremental": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@ui/*": ["ui/*"],
      "@hooks/*": ["hooks/*"],
      "@core/*": ["core/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
